<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_checkbox_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_8dp"
    android:paddingBottom="@dimen/margin_8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/checkbox_unselected"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_question_checkbox_unselected"
        android:contentDescription="@string/placeholder_icon" />

    <ImageView
        android:id="@+id/checkbox_selected"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_question_checkbox_selected"
        android:visibility="gone"
        android:contentDescription="@string/placeholder_icon" />

    <TextView
        android:id="@+id/checkbox_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_short_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</LinearLayout>