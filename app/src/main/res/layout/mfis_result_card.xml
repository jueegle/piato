<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mfis_subquestion"
        style="@style/EDSSResultsAnswerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="@string/placeholder_short_text"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mfis_answer" />

    <TextView
        android:id="@+id/mfis_answer"
        style="@style/SliderValue"
        android:text="@string/number_0"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_16dp"
        app:layout_constraintEnd_toEndOf="@id/mfis_subquestion"
        app:layout_constraintTop_toBottomOf="@id/mfis_subquestion"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>