<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/conLay_training_task"
    android:layout_width="@dimen/horizontal_view_card_width"
    android:layout_height="@dimen/horizontal_view_card_height"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="parent"
    style="@style/ImageCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/hor_view_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hor_view_icon"
        android:gravity="center"
        android:text="@string/placeholder_title"
        style="@style/Subtitle"/>

    <ImageView
        android:id="@+id/hor_view_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hor_view_chip"
        app:layout_constraintTop_toBottomOf="@id/hor_view_card_title"
        android:layout_width="@dimen/horizontal_view_card_icon_size"
        android:layout_height="@dimen/horizontal_view_card_icon_size"
        android:contentDescription="@string/placeholder_title">
    </ImageView>

    <com.google.android.material.chip.Chip
        android:id="@+id/hor_view_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/home_chip_min_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hor_view_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/white"
        android:text="@string/entered"/>
</androidx.constraintlayout.widget.ConstraintLayout>