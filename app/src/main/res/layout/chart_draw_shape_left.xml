<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chart_draw_shape_left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/floodlight_draw_shape_info_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:text="@string/training_task_title_draw_shapes"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableEndCompat="@drawable/icon_info"
        android:drawablePadding="@dimen/margin_4dp"
        style="@style/Subtitle" />

    <TextView
        android:id="@+id/floodlight_draw_shape_info_small_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:text="@string/speed"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/floodlight_draw_shape_info_left" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/draw_shape_chart_left"
        android:layout_width="0dp"
        android:layout_height="@dimen/line_chart_height"
        android:minHeight="@dimen/line_chart_height"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/floodlight_draw_shape_info_small_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>