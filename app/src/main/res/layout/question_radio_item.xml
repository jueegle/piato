<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_radio_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_8dp"
    android:paddingBottom="@dimen/margin_8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/radio_unselected"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:srcCompat="@drawable/ic_question_radio_unselected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/radio_text"
        app:layout_constraintBottom_toBottomOf="@id/radio_text"
        android:contentDescription="@string/placeholder_icon" />

    <ImageView
        android:id="@+id/radio_selected"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:srcCompat="@drawable/ic_question_radio_selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/radio_text"
        app:layout_constraintBottom_toBottomOf="@id/radio_text"
        android:visibility="gone"
        android:contentDescription="@string/placeholder_icon" />

    <TextView
        android:id="@+id/radio_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_short_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20sp"
        android:layout_marginStart="@dimen/margin_32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>