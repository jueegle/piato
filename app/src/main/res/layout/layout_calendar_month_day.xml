<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/calendarDayText"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="22" />

    <View
        android:id="@+id/calendar_entry_indicator_view"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/calendar_entry_indicator"
        app:layout_constraintEnd_toEndOf="@+id/calendarDayText"
        app:layout_constraintStart_toStartOf="@+id/calendarDayText"
        app:layout_constraintTop_toBottomOf="@+id/calendarDayText" />

</androidx.constraintlayout.widget.ConstraintLayout>